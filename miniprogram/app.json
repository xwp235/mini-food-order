{
  "debug": false,
  "entryPagePath": "pages/index/index",
  "pages": [
    "pages/index/index",
    "pages/shopping/shopping",
    "pages/order-list/order-list",
    "pages/member-code/member-code",
    "pages/login/login",
    "pages/recharge/recharge",
    "pages/store-list/store-list",
    "pages/goods-detail/goods-detail",
    "pages/user-info/user-info",
    "pages/store-list/list/index"
  ],
  "usingComponents": {
    "v-button": "@vant/weapp/button",
    "v-field": "@vant/weapp/field",
    "v-radio-group": "@vant/weapp/radio-group",
    "v-radio": "@vant/weapp/radio"
  },
  "tabBar": {
    "color": "#8a8a8a",
    "selectedColor": "#e40030",
    "borderStyle": "white",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "assets/tab/index.png",
        "selectedIconPath": "assets/tab/index-active.png"
      },
      {
        "pagePath": "pages/shopping/shopping",
        "text": "点单",
        "iconPath": "assets/tab/shopping.png",
        "selectedIconPath": "assets/tab/shopping-active.png"
      },
      {
        "pagePath": "pages/order-list/order-list",
        "text": "订单",
        "iconPath": "assets/tab/order.png",
        "selectedIconPath": "assets/tab/order-active.png"
      }
    ]
  },
  "window": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "Weixin",
    "navigationBarBackgroundColor": "#ffffff"
  },
  "componentFramework": "glass-easel",
  "lazyCodeLoading": "requiredComponents",
  "resolveAlias": {
    "@/*": "/*"
  },
  "requiredPrivateInfos": [
    "chooseLocation",
    "getLocation"
  ],
  "permission": {
    "scope.userLocation": {
      "desc": "你的位置信息将用于小程序搜索附近门店和配送地址使用"
    }
  }
}